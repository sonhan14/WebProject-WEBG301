{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}STH Management
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-dark bg-dark sticky-top">
				<a href="{{ path('home') }}" class="navbar-brand">
					STH Management
				</a>

				<a href="{{ path('major') }}" class="navbar-brand">
					Major
				</a>


				<a href="{{ path('course') }}" class="navbar-brand">
					Course
				</a>


				<a href="{{ path('teacher') }}" class="navbar-brand">
					Teacher
				</a>


				<a href="#" class="navbar-brand">
					FeedBack
				</a>


				<a href="{{ path('student') }}" class="navbar-brand">
					Student
				</a>


				<a href="#" class="navbar-brand">
					Grade
				</a>


				<a href="{{path('app_logout')}}" class="navbar-brand ml-auto">
					Log Out
				</a>

			</nav>
		{% endblock %}
	{% block flash %}
		<div class="container-md col-md-6 text-center">
			{% for message in app.session.flashBag.get('Success') %}
				<p class="alert alert-success">{{ message }}</p>
			{% endfor %}
			{% for message in app.session.flashBag.get('Error') %}
				<p class="alert alert-danger">{{ message }}</p>
			{% endfor %}
		</div>
	{% endblock %}

	{% block body %}{% endblock %}
</body></html>
