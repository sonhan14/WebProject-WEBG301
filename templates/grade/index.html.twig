

{% extends 'base.html.twig' %}

{% block title %}Grade{% endblock %}

{% block body %}
<div class="container">
		<h3 class="text-success text-center">Grade</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('add_grade') }}">Add Student Grade</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Grade</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for grade in grades %}
					<tr>
						<td>{{ grade.id }}</td>
						<td>
						{% if grade.student != null %}
							<a class="text-info" href="{{ path('student_detail', {'id': grade.student.id}) }}">
								{{ grade.student.name }}
							</a>
						{% endif %}
						</td>
						<td>{{ grade.grade }}</td>
						<td>
							<a class="btn btn-info" href="{{ path('edit_grade', {'id': grade.id}) }}">EDIT</a>
							<a class="btn btn-warning" href="{{ path('delete_grade', {'id': grade.id}) }}" 
							onclick="return confirm('Are you sure to delete this student ?')">DELETE</a>
						</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}


