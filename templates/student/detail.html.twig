{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h3 class="text-success text-center text-capitalize">Student Detail</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('student') }}">Student List</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Image</th>
					<th>Birthday</th>
					<th>Email</th>
					<th>StudentID</th>
					<th>Grade</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ student.name }}</td>
					<td>
						<img src="{{student.image}}" alt="avatar" width="100" height="120">
					</td>
					<td>{{ student.birthday|date('d/m/Y') }}</td>
					
					<td>{{ student.email }}</td>
	
					<td>{{ student.studentId }}</td>
					{% for grade in student.grades %}
						<td>{{ grade.grade }}</td>
					{% endfor %}

					
					<td>
						<a class="btn btn-info" href="{{ path('edit_student', {'id': student.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('delete_student', {'id': student.id}) }}" 
                  		onclick= "return confirm('Are you sure to delete this student ?')">DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}