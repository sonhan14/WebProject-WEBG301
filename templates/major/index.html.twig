{% extends 'base.html.twig' %}

{% block title %}Major Index{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-success text-center mb-2">Majors</h1>
    <center><a class="btn btn-primary waves-effect waves-light mb-5" href="{{ path('add_major') }}">Add Major</a></center>
    <div class="row">
        {% for major in majors %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ major.image }}" alt="{{ major.name }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ major.name }}</h5>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('major_detail', {'id': major.id})}}" class="btn btn-dark">View details</a>
                            <a href="{{ path('edit_major', {'id': major.id})}}" class="btn btn-dark">Edit</a>
                            <a href="{{ path('delete_major', {'id': major.id})}}" class="btn btn-dark"
                            onclick="return confirm('Do you want to delete this major ?');">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
